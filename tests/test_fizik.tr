// 1. Zemini Doşe (Yeşil Çimen)
değişken x = 0;
değişken z = 0;
değişken i = 0;

yazdır("Zemin Insa Ediliyor...");
döngü (x < 5) {
    z = 0;
    döngü (z < 5) {
        insaa_et(x, 0, z, 1); // Zemin (Çimen)
        z = z + 1;
    }
    x = x + 1;
}

