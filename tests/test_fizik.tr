// 4. Fizik Simülasyonu (Game Loop)
yazdır("Simülasyon Başlıyor... (30 Adım)");
değişken adim = 0;
döngü (adim < 30) {
    
    // Fiziği Güncelle
    değişken eylem_sayisi = fizik_guncelle();
    
    eğer (eylem_sayisi > 0) {
        yazdır("Adım " + adim + ": " + eylem_sayisi + " blok hareket etti.");
    }
    
    // Biraz bekle (Animasyon hızı için)
    bekle(100); 
    
    adim = adim + 1;
}

