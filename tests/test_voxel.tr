yazdır("--- VOXEL DÜNYA TESTİ ---");

// 1. Zemin İnşa Et
değişken x = 0;
değişken z = 0;

yazdır("Zemin inşa ediliyor...");
// 3x3 zemin
döngü (x < 3) {
    z = 0;
    döngü (z < 3) {
        // Tip 1 = Çimen
        insaa_et(x, 0, z, 1);
        z = z + 1;
    }
    x = x + 1;
}

// 2. Bir Duvar Ör (1,1 koordinatına kule)
yazdır("Kule dikiliyor...");
insaa_et(1, 1, 1, 2); // Tip 2 = Taş
insaa_et(1, 2, 1, 2);
insaa_et(1, 3, 1, 2);

// 3. Kontrol Et
yazdır("(1,2,1) noktasında ne var?");
değişken blok = blok_ne(1, 2, 1);
yazdır("Blok Tipi ID: " + blok);

// 4. Kuleyi Yık
yazdır("Kule yıkılıyor...");
blok_sil(1, 3, 1);
blok_sil(1, 2, 1);
blok_sil(1, 1, 1);

yazdır("--- Test Bitti ---");

